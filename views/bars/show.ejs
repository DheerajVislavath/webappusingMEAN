<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">BestBars</p>
            <div class="list-group">
                <li class="list-group-item active">Info1</li>
                <li class="list-group-item">Info2</li>
                <li class="list-group-item">Info3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-reponsive" src="<%= barslist.image %>">
                <div class="caption-full">
                    <a><h4 class=""><%= barslist.name %></h4></a>
                    <p><p><%= barslist.description %></p></p>
                </div>
            </div>
            <div class="well">
               <div class="pull-right"><a class="btn btn-success" href="/bestbars/<%= barslist._id%>/comments/new">Add New Comment</a></div>
                <hr>
                <% barslist.comment.forEach(function(comment){ %>
                 <p><strong><%= comment.author %></strong>
                 <span class="pull-right">10 days ago</span>
                 </p>
                 <p> <%= comment.text %></p>
                <% })%>
                <% include ../partials/footer %>
            </div>
        </div>
    </div>
</div>


