<% include ../partials/header %>

<div class="container">
    <h1 class="text-center">Edit <%= barslist.name %></h1> 
    <div class="container" style="width:30%; margin:25px auto">
        <form action="/bestbars/<%= barslist._id %>?_method=PUT" method="POST">
            <div class="form-group"><input class="form-control" type="text"  name="barslist[name]" value="<%=barslist.name %>"></div>
            <div class="form-group"><input class="form-control" type="text" name="barslist[image]" value="<%=barslist.image %>"></div>
            <div class="form-group"><input class="form-control" type="text" name="barslist[description]" value="<%=barslist.description %>"></div>
            <div class="form-group"><button class="btn btn-lg btn-primary btn-block">Update Post</button></div>
        </form>
        <p><a href="https://learn-webdev1-dheeraj333.c9users.io/bestbars/">Go to Bars List!</a>"</p>
 
    </div>
</div>
